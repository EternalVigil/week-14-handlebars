<h1>Burger Time</h1>
<ul>
{{#each burgers}}
{{#unless this.devoured}}
<li>
	{{this.burger_name}}
	<form action="/{{this.id}}?_method=PUT" method = "POST">
	<input type = "hidden" name = "devoured" value = "true">
		<button type = "submit">EAT IT</button>
	</form>
	{{ >burger/delete-burger }}
		</li>
	{{/unless}}
	{{/each}}
</ul>

<h2>Create a burger</h2>
<form class = "create-updateForm" action = "/" method="POST">
<div class="form-group">
	<label for = "burg">Burger Name:</label>
	<input type = "text" id="burg" name="burger_name">
	</div>
<div class="form-group">
	<label for  = "eaten">Had it?</label><br>
	<input type = "radio" name= "eaten" value="1" checked>It was good!<br>
	<input type = "radio" name="eaten" value="0">Gotta try it.
	</div>	
	<button type="submit">Add to Menu</button>
</form>